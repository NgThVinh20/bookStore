            th.text-left Tạo bởi
            th.text-left Cập nhật bởi
            th.text-left Hành động
        tbody
          tr
            td.text-left 
              +checkbox-30("","")
            td.text-left Danh mục 1
            td.text-center Tiểu thuyết Mưa đỏ
            td.text-center
              img(src="/admin/assets/images/demo-item.png", alt="")
            td.text-center
              div 250.000đ
            td.text-center 
              .tag.tag-green Hoạt Động
            td.text-left
              div Lê Văn A
              div 16:30 - 12/09/2025
            td.text-left
              div Lê Văn A
              div 16:30 - 12/09/2025
            td.text-left 
              .box-actions
                a(href=`/${pathAdmin}/books/create` class="inner-edit")
                  <i class="fa-solid fa-pen-to-square"></i> 
                a(href="" class="inner-remove")
                  <i class="fa-solid fa-trash-can"></i>          
  //-Section-6

  //-Section-7
