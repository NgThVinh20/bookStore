        input(type="text" placeholder="Tìm kiếm")
      .inner-button-create
        a(href= `/${pathAdmin}/books/create`)  + Tạo mới
      .inner-button-trash
        a(href=`/${pathAdmin}/books/trash`)  Thùng rác
  //-Section-5

  //-Section-6
  .section-6
    .table-2
      table
        thead
          tr
            th.text-left
              +checkbox-30("","")
