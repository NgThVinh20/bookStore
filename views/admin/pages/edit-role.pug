extends ../layouts/default.pug
include ../mixins/checkbox.pug


block main
  h1.box-title Chỉnh sửa nhóm quyền

  .section-8
    form(id="settingEditRoleForm")
      .inner-group(style="display: none;")
        label.inner-label(for="id") Id *
        input(type="text" id="id" name="id" value=roleDetail.id)
      .inner-group 
        label.inner-label(for="name") Tên nhóm quyền *
        input(
          type="text" 
          id="name" 
          name="name" 
          value=roleDetail.name
          )
      .inner-group 
        label.inner-label(for="desc") Mô tả ngắn
        input(
          type="text" 
          id="desc" 
          name="desc" 
          value=roleDetail.desc
          )
      .inner-group 
        label.inner-label Phân quyền
        .inner-checkbox-list 
          each item, index in permissions
            .inner-checkbox-item 
              +checkbox-30("permissions", `permissions-${index}`,item.value, roleDetail.permissions.includes(item.value))
              label(for=`permissions-${index}`) #{item.label}
      .inner-button.inner-two-col
        button Cập nhật
    .inner-back 
      a(href=`/${pathAdmin}/settings/roleAdmin`) Quay lại danh sách
