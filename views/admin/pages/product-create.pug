extends ../layouts/default.pug
include ../mixins/checkbox.pug
include ../mixins/options.pug

block main
  if(pers.includes("book-create"))
    h1.box-title Tạo Sản phẩm
    .section-8
      form(action="" id="formCreateProduct")
        .inner-group
          label.inner-label(for="name") Tên sản phẩm
          input(type="text" name="name" id="name")
        .inner-group
          label.inner-label(for="parent") Danh mục 
          select(id="parent" name="parent")
            option(value="") --Chọn danh mục
            +options(categoryList)
        .inner-group
          label.inner-label(for="position") Vị trí
          input(type="text" name="position" id="position")
        .inner-group  
          label.inner-label(for="status") Trạng thái
          select(id="status" name="status")
            option(value="active") Hoạt động
            option(value="inactive") Tạm dừng
        .inner-group  
          label.inner-label(for="discount") Nổi bật
          select(id="discount" name="discount")
            option(value="true") Có
            option(value="false") Không
        .inner-group  
          label.inner-label(for="suggested") Gợi ý
          select(id="suggested" name="suggested")
            option(value="true") Có
            option(value="false") Không
        .inner-group.inner-two-col.inner-avatar
          label.inner-label(for="avatar") Ảnh đại diện
          .inner-upload-image
            input(type="file" id="avatar" name="avatar"  filepondImage)
        .inner-group.inner-two-col.inner-avatar
          label.inner-label(for="images") Danh sách ảnh
          .inner-upload-images
            input(
              type="file" 
              id="images" 
              name="images" 
              filepond-image-multi
              data-allow-reorder="true"
            )
        .inner-group
          label.inner-label Giá cũ
          input(type="text" name="priceOld" id="priceOld") 
        .inner-group
          label.inner-label Giá mới
          input(type="text" name="priceNew" id="priceNew") 
        .inner-group
          label.inner-label Số lượng
          input(type="text" name="amount" id="amount") 
        .inner-group
          label.inner-label(for="time" ) Ngày xuất bản
          input(type="date" name="time" id="time")
        .inner-group
          label.inner-label(for="author") Tác giả
          input(type="text" name="author" id="author")
        .inner-group.inner-two-col
          label.inner-label(for="infor") Thông tin sách
          textarea(name="infor" id="infor" textarea_mce) 
        .inner-button.inner-two-col
          button Tạo mới
      .inner-back
          a(href=`/${pathAdmin}/books/list`) Quay lại danh sách 