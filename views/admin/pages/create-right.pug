extends ../layouts/default.pug
include ../mixins/checkbox.pug


block main
  h1.box-title Tạo nhóm quyền

  .section-8
    form(action="" id="settingRoleForm")
      .inner-group
        label.inner-label(for="name") Tên nhóm quyền
        input(type="text" name="name" id="name")
      .inner-group
        label.inner-label(for="desc") mô tả ngắn
        input(type="text" name="desc" id="desc")
      
      .inner-group
        label.inner-label Phân quyền
        .inner-checkbox-list
          each item, index in permissions
            .inner-checkbox-item 
              +checkbox-30("permissions", `permissions-${index}`,item.value)
              label(for=`permissions-${index}`) #{item.label}
      .inner-button.inner-two-col
        button Tạo mới
    .inner-back
        a(href=`/${pathAdmin}/settings/roleAdmin`) Quay lại danh sách 