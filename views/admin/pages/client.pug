extends ../layouts/default.pug 
include ../mixins/checkbox.pug


block main
  if(pers.includes("user-view"))
    h1.box-title Quản lý khách hàng
    //-Section-5
    .section-5 
      .inner-wrap
        .inner-search
          <i class="fa-solid fa-magnifying-glass"></i>
          input(type="text" placeholder="Tìm kiếm" search)
    //-Section-5

    //-Section-6
    .section-6
      .table-2
        table
          thead
            tr
              th.text-left
                +checkbox-30("","")
              th.text-left Họ tên
              th.text-center Email
              th.text-center Đơn Hàng
              th.text-center Số điện thoại
              th.text-left Địa chỉ
          tbody
            each item in orderList
              tr
                td.text-left 
                  +checkbox-30("","")
                td.text-left #{item.fullName}
                td.text-center #{item.email}
                td.text-center #{item.code}
                td.text-center #{item.phone}
                td.text-left #{item.place}
 
    
         
    //-Section-6

  



  