extends ../layouts/account.pug
include ../mixins/checkbox.pug



block main 
  .form-account  
    h1.inner-title Đăng Ký
    .inner-desc Tạo một tài khoản để tiếp tục
    form(action="" class="inner-form" id = "registerForm")
      .inner-group 
        label.inner-label(for="fullname") Họ tên
        input(type="text" id="fullname" name="fullname" placeholder="Ví dụ: Lê Văn A" class ="inner-control")
      .inner-group 
        label.inner-label(for="email") Email
        input(type="email" id="email" name="email" placeholder="Ví dụ: levana@gmail.com" class ="inner-control")
      .inner-group 
        label.inner-label(for="Password") Mật khẩu
        input(type="password" id="Password" name="Password" class ="inner-control")
      .inner-meta 
        .inner-check 
          +checkbox-30("agree", "agree")
          label(for="agree") Tôi chấp nhận các điều khoản và điều kiện
      button.inner-button Đăng Ký
      .inner-more
        span Bạn đã có tài khoản?    
        a(href=`/${pathAdmin}/account/login`) Đăng nhập
 
      

    

