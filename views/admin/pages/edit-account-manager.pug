extends ../layouts/default.pug
include ../mixins/checkbox.pug


block main
  h1.box-title Chỉnh sửa tài khoản quản trị
  .section-8
    form(action="" id="editAccountManager")
      .inner-group(style="display: none;")
        label.inner-label(for="id") Id *
        input(type="text" id="id" name="id" value=accountDetail.id)
      .inner-group
        label.inner-label(for="fullname") Họ tên
        input(type="text" name="fullname" id="fullname" value=accountDetail.fullname)
      .inner-group
        label.inner-label(for="email") Email
        input(type="email" name="email" id="email"  value=accountDetail.email)
      .inner-group
        label.inner-label(for="number-phone") Số điện thoại
        input(type="number" name="numberPhone" id="number-phone" value=accountDetail.numberPhone)
      .inner-group
        label.inner-label(for="role") Nhóm quyền
        select(name="role" id="role") 
          each item in roleList
            option(value=item.id selected=(item.id == accountDetail.role)) #{item.name}
      .inner-group
        label.inner-label(for="level") Chức vụ
        input(type="text" name="level" id="level" value=accountDetail.level)
      .inner-group
        label.inner-label(for="status") Trạng thái
        select(id="status" name="status")
          option(
            value="initial"
            selected=(accountDetail.status == "initial")
            ) Khởi tạo
          option(
            value="active"
            selected=(accountDetail.status == "active")
            ) Hoạt động
          option(
            value="inactive"
            selected=(accountDetail.status == "inactive")
            ) Tạm dừng
      .inner-group.inner-two-col.inner-avatar
        label.inner-label(for="avatar") Ảnh đại diện
        .inner-upload-image
          input(type="file" id="avatar" name="avatar" filepondImage image-default=accountDetail.avatar )
      .inner-button.inner-two-col
        button Cập nhật
    .inner-back
        a(href=`/${pathAdmin}/settings/adminAccount`) Quay lại danh sách
