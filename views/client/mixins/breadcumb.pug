mixin breadcumb(categoryDetail, book)
  - const bookDetail = book ? book :categoryDetail;
  .breadcrumb
    .inner-image
      img(
        alt=bookDetail.name
        src="/client/assets/images/bg.png"
        )
    .inner-content
      .container
        .inner-wrap
          h1.inner-title #{bookDetail.name}
          nav.inner-links
            a(href="/") Trang Chá»§
            i.fa-solid.fa-angles-right
            a(href=`/category/${categoryDetail.slug}`) #{categoryDetail.name}
            if(book)
              i.fa-solid.fa-angles-right
              a(href=`/category/${bookDetail.slug}`) #{bookDetail.name}